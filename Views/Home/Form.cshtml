@{
}

@model Movie

<h1>Add a Movie</h1>

<form  method="post">

    <input type="hidden" asp-for="MovieId"/>    
    <select asp-for="CategoryId">
        <option value="">Select Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Title"></label>
    <input asp-for="Title" placeholder="Enter Title" />
    <br />
    <label asp-for="Year"></label>
    <input asp-for="Year" placeholder="Enter Year" />
    <br />
    <label asp-for="Director"></label>
    <input asp-for="Director" placeholder="Enter Director" />
    <br />
    <select asp-for="Rating">
        <option value="">Select Rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited"></label>
    <input asp-for="Edited" placeholder="Enter Editing Information" />
    <br />
    <label asp-for="LentTo"></label>
    <input asp-for="LentTo" placeholder="Enter Borrower's Name" />
    <br />
    <label asp-for="Notes"></label>
    <input asp-for="Notes" placeholder="Enter Notes" />
    <br />
    <button type="submit">Submit</button>
</form>

