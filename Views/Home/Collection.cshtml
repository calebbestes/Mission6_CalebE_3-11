@{
}
@model List<Movie>
<h1>Collection</h1>
<table class="table table-bordered">
    <thead class="fw-bold">
        <td>Category</td>
        <td>Title</td>
        <td>Director</td>
        <td>Rating</td>
        <td>Edited</td>
        <td>LentTo</td>
        <td>CopiedToPlex</td>
        <td>Notes</td>
    </thead>
    @foreach (var x in Model)
    {
        <tbody>
            <td>@x.Category?.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.CopiedToPlex</td>
            <td>@x.Notes</td>

            <td><a class="btn btn-warning" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
        </tbody>
    }
   
</table>

